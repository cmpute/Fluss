<Window x:Class="JacobZ.Fluss.WinTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JacobZ.Fluss.WinTool"
        mc:Ignorable="d"
        
        Title="MainWindow" Height="450" Width="800"
        DragEnter="Window_DragEnter" Drop="Window_Drop" AllowDrop="True">
    <Grid>
        <TextBlock x:Name="MainTip" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48" FontFamily="Microsoft YaHei UI" TextWrapping="Wrap">Please Drop a file here</TextBlock>
        <Frame Grid.Column="1" x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
